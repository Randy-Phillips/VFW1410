
Titanium.UI.setBackgroundColor('#000');

var pWidth = Ti.Platform.displayCaps.platformWidth;
var boxWidth = ( pWidth / 3 ) - 15;
// Main Window


var mainWin = Titanium.UI.createWindow({  
    title: "Main Application",
    backgroundColor:"#fff"
    
});

var classLabel = Titanium.UI.createLabel({
	color:"black",
	text:"Randy Phillips    |    Visual Frameworks 1410",
	font:{fontSize:14,fontFamily:"Helvetica Neue"},
	textAlign: "center",
	width: "auto"
});

var classView = Ti.UI.createView ({
	backgroundColor: "ADADAD",
	border: 1,
	borderRadius: 2,
	height: 50,
	bottom: 10,
	right: 10,
	zIndex: 3,
});



var mainView = Ti.UI.createView ({
	backgroundColor: "black",
	borderColor: "black",
	border: 1,
	top: 20,
	left: 0,
	right: 0,
	bottom: 0,
	zIndex: 2,
});

var backView = Ti.UI.createView ({
	backgroundColor: "ffffff",
	top: 0,
	left: 0,
	right: 0,
	bottom: 0,
	zIndex: 1,
});



//var loadFile = require('content');

var galleryView = Ti.UI.createView ({ 
	backgroundColor: "fff",
	borderColor: "black",
	border: 1,
	height: boxWidth,
	width: boxWidth,
	left: 10,
	top: 100,
	zIndex: 5,
	});
	
var dataView = Ti.UI.createView ({ 
	backgroundColor: "fff",
	borderColor: "black",
	border: 1,
	height: boxWidth,
	width: boxWidth,
	left: galleryView.left + galleryView.width + 10,
	top: 100,
	zIndex: 5,
	});
	
var customView = Ti.UI.createView ({ 
	backgroundColor: "fff",
	borderColor: "black",
	border: 1,
	height: boxWidth,
	width: boxWidth,
	left: dataView.left + dataView.width + 10,
	top: 100,
	zIndex: 5,
	});
	

mainWin.add(galleryView,customView,dataView);
classView.add(classLabel);
mainWin.add(mainView,classView,backView);
mainWin.open();


